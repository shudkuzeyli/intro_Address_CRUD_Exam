@model IEnumerable<intro_Address_CRUD_Exam.Models.Address>

<div class="row">
	<div class=" col-xxl-12" style="font-size:x-large">
		<div class="card card-xxl-stretch mb-5 mb-xl-x1-8">
			<div class="card-header border-0 mb-xl-xl-8">
				<h3 class="card-title align-item-start flex-column">
					Adres Listesi
				</h3>
				<div class="card-toolbar" data-bs-toogle="tooltip" data-bs-placement="top">
					<a asp-controller="Address" asp-action="Create" class="btn btn-primary">Yeni Adres</a>
				</div>

			</div>
			<table class="table table-striped table-row-bordered gs-7 dt-init">
				<thead>
					<tr>
						<th class="col-4">İşlemler</th>
						<th>@Html.DisplayNameFor(Model => Model.Tanim)</th>
						<th>@Html.DisplayNameFor(Model => Model.Country)</th>
						<th>@Html.DisplayNameFor(Model => Model.City)</th>
						<th>@Html.DisplayNameFor(Model => Model.Ilce)</th>
						<th>Durum</th>
					</tr>
				</thead>
				<tbody style="font-size: 2rem">
					@foreach (var item in Model)
					{
						<tr>
							<td>
								<a asp-action="Edit" asp-route-id="@item.Id" data-toogle="tooltip" title="Düzenle" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-plus"></i></a>
								<a asp-action="Detail" asp-route-id="@item.Id" data-toogle="tooltip" title="Detay Gör" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-person-vcard"></i></a>
								<a asp-action="Delete" asp-route-id="@item.Id" data-toogle="tooltip" title="Sil" class=" btn btn-warning"><i style="font-size: 2rem" class="bi bi-trash3"></i></a>
							</td>
							<td>@Html.DisplayFor(modelItem => item.Tanim)</td>
							<td>@Html.DisplayFor(modelItem => item.Country.Descp)</td>
							<td>@Html.DisplayFor(modelItem => item.City.Descp)</td>
							<td>@Html.DisplayFor(modelItem => item.Ilce.Descp)</td>
							<td>@item.AktifString</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>